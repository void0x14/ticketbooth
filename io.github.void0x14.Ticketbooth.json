{
    "id": "io.github.void0x14.Ticketbooth",
    "runtime": "org.gnome.Platform",
    "runtime-version": "49",
    "sdk": "org.gnome.Sdk",
    "command": "ticketbooth",
    "separate-locales": false,
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--talk-name=org.gtk.vfs.*",
        "--filesystem=xdg-run/gvfsd"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        "pypi-dependencies.json",
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "cleanup": [
                "*"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.gnome.org/GNOME/blueprint-compiler/-/archive/v0.16.0/blueprint-compiler-v0.16.0.tar.gz",
                    "sha256": "01feb8263fe7a450b0a9fed0fd54cf88947aaf00f86cc7da345f8b39a0e7bd30"
                }
            ]
        },
        {
            "name": "ticketbooth",
            "buildsystem": "meson",
            "config-opts": [
                "-Dprerelease=false"
            ],
            "post-install": [
                "mv /app/bin/ticketbooth /app/bin/ticketbooth-bin",
                "install -Dm755 /app/ticketbooth/ticketbooth-run-script /app/bin/ticketbooth"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/void0x14/ticketbooth.git",
                    "tag": "v2.0.0"
                }
            ]
        }
    ]
}